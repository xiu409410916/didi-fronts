.content {
  width: 100%;
}
.content .swiper {
    height: 307rpx;
}
.content .swiper .swiper-item image {
      width: 100%;
      height: 307rpx;
      display: block;
}
.contBg {
  background: #FFFFFF;
  overflow: hidden;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}
.contBg .contOver {
    border-bottom: 1px #EDEDED solid;
    overflow: hidden;
    -webkit-transition: all 0.4s;
    -o-transition: all 0.4s;
    transition: all 0.4s;
}
.contBg .contOver:active {
      background: #E2E2E2;
}
.contBg .contOver:last-child {
      border-bottom: none;
}
.contBg .contOver .idxMainBox {
      width: 92%;
      margin: 0 auto;
}
.contBg .contOver .contOverLt {
      float: left;
      width: 500rpx;
      margin-left: 30rpx;
}
.contBg .contOver .contOverLt .contTxt {
        color: #333333;
        font-size: 30rpx;
        width: 100%;
        -o-text-overflow: ellipsis;
           text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        padding-top: 30rpx;
}
.contBg .contOver .contOverLt .contTime {
        color: #888888;
        font-size: 24rpx;
        margin-top: 30rpx;
        margin-bottom: 30rpx;
}
.contBg .contOver .contRtImg {
      float: left;
      width: 100rpx;
      height: 100rpx;
      margin: 30rpx 0;
}
.contBg .contOver .contRtImg image {
        border-radius: 50%;
        width: 100rpx;
        height: 100rpx;
        display: block;
}
.right {
  float: right;
  font-size: 28rpx;
  color: #333333;
  margin-top: 60rpx;
}
.right image {
    width: 20rpx;
    height: 20rpx;
    vertical-align: middle;
    margin: 0 0 4rpx 10rpx;
}

